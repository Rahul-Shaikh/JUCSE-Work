<%@ page language="java" contentType="text/html; charset=ISO-8859-1"
    pageEncoding="ISO-8859-1"%>
<%@ page import="java.sql.*" %>
<%@ page import="travel.DAO" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=ISO-8859-1">
<title>Flights</title>
</head>
<body>

<% ResultSet rs=(ResultSet)request.getAttribute("flights");
	
if(rs==null)
{%>
	<div class="error">Sorry!!! No flights found</div>
<% }
else
{

	do
	{%>
		<div class="flight">
			<%=rs.getString("flight_num")%>
			SRC: <%=rs.getString("src_city")%>
			DEST: <%=rs.getString("dest_city")%>
			PRICE: <%=rs.getString("price")%>
			
			<% String disc= rs.getString("discount"); 
				if(disc.compareTo("null")!=0)
				{%>
					DISCOUNT: <%=disc%>
				<%} %>
		</div>

	<%}
	while(rs.next());
	}%>

</body>
</html>